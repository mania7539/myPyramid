<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PyramidActivity" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:layout_toLeftOf="@+id/PlusButton"
        />
   
    
	<ImageButton 
	    android:id="@+id/PlusButton"
	    android:layout_alignParentRight="true"
	    android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/plus_icon_xsmall"
        android:contentDescription="@string/pyramidDefImgContentDescription"
	    />
	
	<ImageButton 
	    android:id="@+id/MinusButton"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/PlusButton"
	    android:layout_marginTop="30dp"
	   	android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/minus_icon_xsmall"
        android:contentDescription="@string/pyramidDefImgContentDescription"
	    />
	
</RelativeLayout>